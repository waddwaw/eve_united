<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_ctrl_bg">
        <EditText
            android:id="@+id/id_ed_home_number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxHeight="50dp"
            android:hint="请输入对方手机号"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_toLeftOf="@id/id_ed_home_number"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hmoe_nubmer"/>
        <Button
            android:id="@+id/id_home_bt"
            android:layout_toEndOf="@id/id_ed_home_number"
            android:layout_below="@id/id_ed_home_number"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/login_bt_select"
            android:text="绑定"
            />
</RelativeLayout>
