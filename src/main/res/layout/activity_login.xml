<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.li.eve_united.activity.LoginActivity">

    <RelativeLayout

        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp">

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/id_login_et_user"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:maxHeight="50dp"
            />
        <EditText
            android:layout_below="@id/id_login_et_user"
            android:id="@+id/id_login_et_pwd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="请输入密码"
            android:maxHeight="50dp"
            android:password="true"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sign_in_bg1"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sign_in_bg2"
            android:layout_marginTop="50dp"/>
        <Button
            android:id="@+id/id_login_bt"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/id_login_et_pwd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="16dp"
            android:background="@drawable/login_bt_select"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/id_text_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_login_bt"
            android:text="忘记密码？"/>
    </RelativeLayout>

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon"/>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/id_login_reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:text="点击注册"/>
    <FrameLayout
        android:id="@+id/id_layout_loading_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aa000000"
        android:clickable="true"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请稍后..."
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
